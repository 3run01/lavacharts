<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="./vendor/autoload.php"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         strict="true"
         syntaxCheck="true"
>
  <testsuites>
    <testsuite name="Package Test Suite">
      <directory suffix=".php">./tests/</directory>
    </testsuite>
  </testsuites>

  <filter>
    <whitelist processUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">./src/Lavacharts</directory>
      <exclude>
        <directory suffix=".php">./src/Lavacharts/Facade</directory>
        <directory suffix=".php">./src/Lavacharts/Traits</directory>
        <file>./src/Lavacharts/LavachartsServiceProvider.php</file>
      </exclude>
    </whitelist>
  </filter>

  <logging>
    <log type="coverage-html"
         target="./build/coverage"
         charset="UTF-8"
         highlight="true"
         lowUpperBound="35"
         highLowerBound="70" />
  </logging>

  <listeners>
    <listener class="\Mockery\Adapter\Phpunit\TestListener"></listener>
  </listeners>
</phpunit>
